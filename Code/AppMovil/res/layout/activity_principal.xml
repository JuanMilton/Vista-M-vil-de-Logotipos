<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logotipos"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PrincipalActivity" >

    <TextView
        android:id="@+id/principal_tx_last_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/principal_b_actualizar"
        android:layout_alignLeft="@+id/principal_b_actualizar"
        android:layout_alignRight="@+id/principal_b_actualizar"
        android:text="Ultima ActualizaciÃ³n"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/principal_b_actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/principal_b_folders"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/principal_b_folders"
        android:onClick="onActualizarClick"
        android:src="@drawable/actualizar" />

    <ImageButton
        android:id="@+id/principal_b_recientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/principal_b_"
        android:onClick="onRecientesClick"
        android:src="@drawable/recientes" />

    <ImageButton
        android:id="@+id/principal_b_folders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/principal_b_recientes"
        android:layout_alignRight="@+id/principal_b_recientes"
        android:layout_below="@+id/principal_b_recientes"
        android:layout_marginTop="60dp"
        android:onClick="onFoldersClick"
        android:src="@drawable/carpetas" />

</RelativeLayout>