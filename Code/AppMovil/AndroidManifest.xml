<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmcm.view.logosapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="6"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.jmcm.logosapp.view.PrincipalActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.jmcm.logosapp.view.ImageActivity"></activity>
        <activity android:name="com.jmcm.logosapp.view.LogotiposActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="com.jmcm.logosapp.view.Logotipos2Activity" android:screenOrientation="portrait"></activity>
        <activity android:name="com.jmcm.logosapp.view.FoldersActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="com.jmcm.logosapp.view.ConfigurationActivity" android:screenOrientation="portrait"></activity>
        <activity android:name="com.jmcm.logosapp.view.PaginatorActivity" android:screenOrientation="portrait"></activity>
        
    </application>

</manifest>